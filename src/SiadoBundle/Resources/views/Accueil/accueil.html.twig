{% extends "base.html.twig" %}

{% block body %}
    <section class="slider">
        <ul class="slider-images">
            <li class="slider-image slider-selected">
                <div class="slider-content">
                    <img src="{{ asset('images/taches-menageres.jpg') }}">

                    <div class="container">
                        <div class="slider-description">
                            <div class="slider-title">
                                UNE MAISON PROPRE ET RANGé !
                            </div>
                            <div class="slider-bouton">
                                <a class="bouton" style="background: goldenrod" href="">
                                    Demande de devis
                                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </li>

            <li class="slider-image">
                <div class="slider-content">
                    <img src="{{ asset('images/slide-aide-devoir.jpg') }}">

                    <div class="container">
                        <div class="slider-description">
                            <div class="slider-title">
                                DES ENFANTS HEUREUX !
                            </div>
                            <div class="slider-bouton">
                                <a class="bouton" style="background: #17a2b8" href="">
                                    Demande de devis
                                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </li>

            <li class="slider-image">
                <div class="slider-content">
                    <img src="{{ asset('images/slide-aide-personnes.jpg') }}">

                    <div class="container">
                        <div class="slider-description">
                            <div class="slider-title">
                                FORCE ET COURAGE !
                            </div>
                            <div class="slider-bouton">
                                <a class="bouton" style="background: mediumseagreen" href="">
                                    Demande de devis
                                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </li>

            <li class="slider-image">
                <div class="slider-content">
                    <img src="{{ asset('images/slide-bricolage.jpg') }}">

                    <div class="container">
                        <div class="slider-description">
                            <div class="slider-title">
                                UNE MAISON COMME NEUVE !
                            </div>
                            <div class="slider-bouton">
                                <a class="bouton" style="background: darkorange" href="">
                                    Demande de devis
                                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </li>

            <li class="slider-image">
                <div class="slider-content">
                    <img src="{{ asset('images/slide-jardinage.jpg') }}">

                    <div class="container">
                        <div class="slider-description">
                            <div class="slider-title">
                                UNE PELOUSE TONDU ET ARROSé !
                            </div>
                            <div class="slider-bouton">
                                <a class="bouton" style="background: darkgray" href="">
                                    Demande de devis
                                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>

        <a>
            <div class="slide-prev">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
            </div>
        </a>

        <a>
            <div class="slide-next">
                <i class="fa fa-chevron-right" aria-hidden="true"></i>
            </div>
        </a>
    </section>

    <section class="section nos-services">
        <div class="container">
            <p class="section-titre">
                SIADO Services
                <span class="section-sous-titre">Les services proposés !</span>
            </p>

            <div class="box">
                <div class="col col-5">
                    <div class="nos-service-description">
                        <img class="round-icon" src="{{ asset('images/icones/menage-round3.png') }}">
                        <h4>Ménage</h4>
                        <p>Nous vous accompagnons dans vos tâches ménagères !</p>
                        <a href="{{ path('siado_menage') }}">
                            <button class="service-btn menage-bg border-menage">Voir Détails</button>
                        </a>
                    </div>
                </div>
                <div class="col col-5">
                    <div class="nos-service-description">
                        <img class="round-icon" src="{{ asset('images/icones/garde-enfants-round3.png') }}">
                        <h4>Garde Enfants</h4>
                        <p>Nous prenons soins de vos enfants !</p>
                        <a href="{{ path('siado_garde_enfants') }}">
                            <button class="service-btn garde-enfants-bg border-garde-enfants">Voir Détails</button>
                        </a>
                    </div>
                </div>
                <div class="col col-5">
                    <div class="nos-service-description">
                        <img class="round-icon" src="{{ asset('images/icones/aides-mobilite-round3.png') }}">
                        <h4>Aides Mobilité</h4>
                        <p>Nous vous aidons à vous déplacer et à vous rendre heureux !</p>
                        <a href="{{ path('siado_aide_mobilite') }}">
                            <button class="service-btn aides-mobilite-bg border-aides-mobilite">Voir Détails</button>
                        </a>
                    </div>
                </div>
                <div class="col col-5">
                    <div class="nos-service-description">
                        <img class="round-icon" src="{{ asset('images/icones/jardinage-bricolage-round3.png') }}">
                        <h4>Jardinage / Bricolage</h4>
                        <p>Nous intervenons dans l'entretien de votre jardin mais aussi pour des travaux maison de rénovation !</p>
                        <a href="{{ path('siado_jardinage_bricolage') }}">
                            <button class="service-btn bricolage-jardinage-bg border-jardinage-bricolage">Voir Détails</button>
                        </a>
                    </div>
                </div>
                <div class="col col-5">
                    <div class="nos-service-description">
                        <img class="round-icon" src="{{ asset('images/icones/soutien-scolaire-round3.png') }}">
                        <h4>Soutien Scolaire</h4>
                        <p>Nous accompagnons vos enfants dans la réussite scolaire !</p>
                        <a href="{{ path('siado_aide_devoirs') }}">
                            <button class="service-btn soutien-scolaire-bg border-soutien-scolaire">Voir Détails</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section fonctionnement">
        <div class="container">
            <p class="section-titre">
                SIADO Fonctionnement
                <span class="section-sous-titre">Simple et rapide !</span>
            </p>
        </div>
    </section>

    {% if articles|length > 0 %}
    <section class="section actualite">
        <div class="container">
            <p class="section-titre">
                SIADO Actualité
                <span class="section-sous-titre">Nos derniers articles !</span>
            </p>

            <div class="blog">
                {% for article in articles %}
                    <div class="blog-content">
                        <h1 class="blog-titre">
                            {{ article.titre }}
                            <span class="blog-sous-titre">
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                            Le {{ article.date | date('d/m/Y') }}
                        </span>
                        </h1>
                        <div class="blog-image">
                            <img src="{{ asset(articles_directory) ~ article.image.file }}">
                        </div>
                        <div class="blog-paragraphe">
                            <p>
                                {{ article.description | slice(0,200) }} [...]
                            </p>
                        </div>

                        <div class="blog-button-detail">
                            <a class="button-detail" href="{{ path('siado_article_detail', { id: article.id }) }}">Lire plus</a>
                        </div>
                    </div>
                {% endfor %}

                <a href="{{ path('siado_article_liste_detail') }}" class="blog-button">
                    Voir tout
                </a>
            </div>
        </div>
    </section>
    {% endif %}
{% endblock body %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/slider.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/accueil.js') }}"></script>
{% endblock javascripts %}