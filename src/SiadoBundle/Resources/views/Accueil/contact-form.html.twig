<div class="contact-form">
    {{ form_start(form, { 'attr': {'class': 'messageform'} }) }}
        <div class="contact-form-nom">
            {{ form_widget(form.nom, { 'attr': {'class': 'messageform-nom'} }) }}
        </div>

        <div class="contact-form-email">
            {{ form_widget(form.email, { 'attr': {'class': 'messageform-email'} }) }}
        </div>

        <div class="contact-form-tel">
            {{ form_widget(form.telephone, { 'attr': {'class': 'messageform-tel'} }) }}
        </div>

        <div class="contact-form-objet">
            {{ form_widget(form.objet, { 'attr': {'class': 'messageform-objet'} }) }}
        </div>

        <div class="contact-form-msg">
            {{ form_widget(form.message, { 'attr': {'class': 'messageform-msg'} }) }}
        </div>

        <div class="contact-form-envoyer">
            {{ form_widget(form.envoyer, { 'attr': {'class': 'messageform-envoyer'} }) }}
        </div>
    {{ form_end(form) }}

    {{ form_errors(form) }}
    {{ form_errors(form.nom) }}
    {{ form_errors(form.email) }}
    {{ form_errors(form.telephone) }}
    {{ form_errors(form.objet) }}
    {{ form_errors(form.message) }}
</div>